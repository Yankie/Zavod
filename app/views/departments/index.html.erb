<h1>Listing departments</h1>

<table>
  <tr>
    <th>Department number</th>
    <th>Factory</th>
    <th>Chief name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.department_number %></td>
	<td><%= @factory.name %></td>
    <td><%= department.chief_name %></td>
    <td><%= link_to 'Show', factory_department_path(department.factory_id, department) %></td>
    <td><%= link_to 'Edit', edit_factory_department_path(department.factory_id, department) %></td>
    <td><%= link_to 'Destroy', factory_department_path(department.factory_id, department), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Department', new_factory_department_path(@factory.id) %>
