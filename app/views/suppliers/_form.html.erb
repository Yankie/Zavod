<%= form_for(@supplier) do |f| %>
  <%= f.error_messages :class =>  "error_explanation",  :id => "error_explanation" %>
  <div class="field">
    <%= f.label :supplier_number %><br />
    <%= f.number_field :supplier_number %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :region %><br />
    <%= f.text_field :region %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :ceo_name %><br />
    <%= f.text_field :ceo_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
